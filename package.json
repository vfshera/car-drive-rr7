{
  "name": "cardrive",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=production react-router build",
    "dev": "react-router dev",
    "start": "cross-env NODE_ENV=production react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "cross-env DB_MIGRATING=true tsx ./app/.server/db/migrate.ts",
    "db:seed": "tsx ./app/.server/db/seed/index.ts",
    "db:setup": "pnpm db:generate && pnpm db:migrate && pnpm db:seed",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "commitlint": "commitlint --edit",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.0",
    "@libsql/client": "^0.15.10",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@react-router/node": "^7.1.1",
    "@react-router/serve": "^7.1.1",
    "@tailwindcss/vite": "^4.1.11",
    "better-auth": "^1.1.10",
    "class-variance-authority": "^0.7.1",
    "cli-table3": "^0.6.5",
    "clsx": "^2.1.1",
    "dotenv": "^17.0.0",
    "dotenv-expand": "^12.0.1",
    "drizzle-orm": "^0.44.0",
    "drizzle-seed": "^0.3.0",
    "hono": "^4.6.15",
    "isbot": "^5.1.19",
    "kleur": "^4.1.5",
    "lucide-react": "^0.539.0",
    "path-to-regexp": "^8.2.0",
    "radashi": "^12.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-router": "^7.1.1",
    "react-router-hono-server": "^2.5.0",
    "sonner": "^2.0.0",
    "tailwind-merge": "^3.0.0",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.2",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@clack/prompts": "^0.11.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@eslint/js": "^9.17.0",
    "@react-router/dev": "^7.1.1",
    "@react-router/remix-routes-option-adapter": "^7.1.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/parser": "^8.19.0",
    "commitizen": "^4.3.1",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-import-resolver-typescript": "^4.0.0",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "inquirer": "^12.0.0",
    "lint-staged": "^16.0.0",
    "postcss": "^8.4.49",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "remix-flat-routes": "^0.8.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^7.0.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
